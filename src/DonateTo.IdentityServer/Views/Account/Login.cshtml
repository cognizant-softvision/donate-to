@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<form class="form-card" asp-route="Login" id="login-form">
    <input type="hidden" asp-for="ReturnUrl" />

    <h3 class="mb-3 font-weight-normal card-title">Donate</h3>

    <label asp-for="Email" class="sr-only">Email address</label>
    <input type="email" asp-for="Email" class="form-control" placeholder="E-mail" autofocus required>

    <label asp-for="Password" class="sr-only">Password</label>
    <input type="password" class="form-control" asp-for="Password" placeholder="Password" required>

    @if (ViewContext.ModelState.IsValid == false)
    {
        <div class="alert alert-danger">Incorrect user or password</div>
    }

    <input class="btn btn-lg btn-primary btn-block submit-button" name="button" type="submit" value="Log in" />

    <div class="form-group">
        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Forgot Password?</a>
    </div>
    <div class="form-group">
        Don't have an account? <a asp-area="" asp-controller="Account" asp-action="Register">Join Now</a>
    </div>
</form>