@model UserRegistrationViewModel

@{
    ViewData["Title"] = "Register";
}

    <form class="form-card" asp-action="Register">
        <div class="logo"><img src="~/Images/logotype-black.png"></div>
        <h5 class="mb-3 font-weight-normal card-subtitle">Sign Up</h5>
        <input type="hidden" asp-for="ReturnUrl" />

        <label asp-for="FirstName" class="sr-only">First Name</label>
        <input type="text" asp-for="FirstName" class="form-input form-control" placeholder="First Name">
        <span asp-validation-for="FirstName"></span>

        <label asp-for="LastName" class="sr-only">Last Name</label>
        <input type="text" asp-for="LastName" class="form-input form-control" placeholder="Last Name">
        <span asp-validation-for="LastName"></span>

        <label asp-for="Email" class="sr-only">Email address</label>
        <input type="email" asp-for="Email" class="form-input form-control" placeholder="E-mail">
        <span asp-validation-for="Email"></span>


        <label asp-for="Password" class="sr-only">Password</label>
        <input asp-for="Password" id="password" class="form-input form-control" oninput="CheckPasswordCriteria(this.value)" placeholder="Password">
        <i class="glyphicon glyphicon-heart"></i>
        <span asp-validation-for="Password"></span>
        <div class="alert-password">
            <span>
                The password must have at least 8 characters, 1 number, 1 uppercase letter, 1 lowercase letter.
            </span>
        </div>
        <label asp-for="ConfirmPassword" class="sr-only">Re-enter Password</label>
        <input type="password" id="confirmPassword" asp-for="ConfirmPassword" class="form-input form-control" oninput="CheckPasswordMatch(this.value)" placeholder="Re-enter Password">
        <span asp-validation-for="ConfirmPassword"></span>

        <div asp-validation-summary="All"></div>
        <br />
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-lg btn-primary btn-block submit-button" />
        </div>
    </form>

<script src="~/js/signup.js" asp-append-version="true"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}