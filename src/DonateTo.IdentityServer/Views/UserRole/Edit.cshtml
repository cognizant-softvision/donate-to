@model DonateTo.IdentityServer.Models.UserRoleViewModel

@{
    ViewData["Title"] = "User Roles";
}

<h1>User Roles</h1>
<hr />

<form asp-action="Update">
    <div class="row">
        <div class="col-md-2">
            <label asp-for="Id" class="control-label"></label>
        </div>
        <div class="col-md-8">
            <input asp-for="Id" class="form-control" readonly />
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label asp-for="FullName" class="control-label"></label>
        </div>
        <div class="col-md-8">
            <input asp-for="FullName" class="form-control" readonly />
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label asp-for="Email" class="control-label"></label>
        </div>
        <div class="col-md-8">
            <input asp-for="Email" class="form-control" readonly />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">
            Roles
        </div>
        <div class="col-md-8">
            @for (var i = 0; i < Model.Roles.Count(); i++)
            {
                <div class="row">
                    <div class="col-md-2">
                        <input type="hidden" asp-for="Roles[i].Id" />
                        <input asp-for="Roles[i].Assigned" />
                    </div>
                    <div class="align-content-lg-start">
                        <input type="hidden" asp-for="Roles[i].Name" />
                        @Model.Roles[i].Name
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="form-group">
        <input type="button"
               value="Back to list"
               class="btn btn-primary"
               onclick="location.href='@Url.Action("List")'" />
        <input type="button"
               value="Cancel"
               class="btn btn-primary"
               onclick="location.href='@Url.Action("Edit", Model.Id)'" />
        <input type="submit"
               value="Save"
               class="btn btn-primary" />
    </div>
</form>