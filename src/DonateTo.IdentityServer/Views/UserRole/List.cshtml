@model IEnumerable<DonateTo.ApplicationCore.Models.UserModel>

@{
    ViewData["Title"] = "Users Roles";
}

<h1>Users Roles</h1>

<div class="card">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    Roles
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @{
                            System.Text.StringBuilder sbRoles = new System.Text.StringBuilder();
                            foreach (var role in item.Roles)
                            {
                                if (sbRoles.Length > 0)
                                {
                                    sbRoles.Append(", ");
                                }
                                sbRoles.Append(role.Name);
                            }
                            string strRoles = sbRoles.ToString();
                        }
                        @strRoles
                    </td>
                    <td>
                        @Html.ActionLink("Edit Roles", "Edit", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

